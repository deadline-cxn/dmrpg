#!/bin/bash
#yes | rm /var/www/modules/core_videos/cache/*.jpg
#cd tools
#./cleanthemes.sh
#cd ..
ver=$(grep 'v' version | sed 's/[^0-9.]//g')
va=$(<build.dat);
va=`expr $va + 1`;
echo $va > build.dat;
echo "RPG $ver BUILD $va";
echo "Dumping database structure..."
dt=$(date +%s)
mv sql/rpg.structure.sql sql/$dt.rpg.structure.sql
mysqldump -d -u backup rpg > sql/rpg.structure.sql
git add *
git commit -a -m "update $1"
git push origin master



